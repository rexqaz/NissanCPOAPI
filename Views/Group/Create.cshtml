@model WebApplication.Models.Group
@{
    ViewBag.Title = "新增群組";
    ViewBag.icon = "fa fa-file-text";
}

<div class="col-xs-8">
    <div class="">
        @using (Html.BeginForm("CreateInProgress", "Group", FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group has-feedback" style="padding-bottom:30px">
                <label for="inputEmail3" class="col-sm-2 control-label">群組名稱<span style="color:#a94442;font-size: 18px;">*</span></label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.roleName, new { @class = "form-control", placeholder = "群組名稱" })
                </div>
            </div>
            <div class="form-group has-feedback" style="padding-bottom:40px">
                <label for="inputEmail3" class="col-sm-2 control-label">群組說明<span style="color:#a94442;font-size: 18px;">*</span></label>
                <div class="col-sm-10">
                    @Html.TextAreaFor(
                        model => model.description,
                        new { @class = "form-control", placeholder = "群組說明", style = "width: 640px; height: 150px;" }
                    )
                </div>
            </div>
            <br />
            @*<div class="form-group has-feedback" style="padding-top:100px;">
                <label for="inputEmail3" class="col-sm-2 control-label">狀態<span style="color:#a94442;font-size: 18px;">*</span></label>
                <div class="col-sm-10">
                    <select name="status">
                        <option value="0">==請選擇狀態==</option>
                        <option value="1">啟用</option>
                        <option value="0">停用</option>
                    </select>
                </div>
            </div>*@
            <br />
            <br />
            <div class="form-group has-feedback" style="padding-bottom:40px">
                <label for="inputEmail3" class="col-sm-2 control-label"></label>
                <div class="col-sm-10">
                    <button style="margin-top:20px;" type="submit" class="btn btn-primary btn-block btn-flat">新增</button>
                </div>
            </div>
            @*<div class="row" >
                <div class="col-xs-4">
                    <button style="margin-top:20px;"  type="submit" class="btn btn-primary btn-block btn-flat">新增</button>
                </div>
            </div>*@
        }

    </div>
</div>

@section Scripts {
    @Scripts.Render("~/Scripts/Forms/Advanced")
    <script>
        $(".sidebar-menu > li").each(function () {
            var navItem = $(this);
            if (navItem.find("a").find("span").text() == "後台帳號管理") {
                navItem.addClass('active');
            }
        });
    </script>
}